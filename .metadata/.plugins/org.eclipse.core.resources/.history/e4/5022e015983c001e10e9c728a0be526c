package day02;

public class IF01 {

	public static void main(String[] args) {
		/* 조건문 : 조건식이 참일경우 실행문을 실행하는 문
		 * if문, switch문
		 * if(조건식) { 실행문; }
		 * 실행문 한줄일 경우 { } 생략가능
		 * 조건식은 참일 때 실행문을 실행
		 * */
		
		int num = 10;
		//num가 0보다 크면 양수
		if(num > 0) {
			System.out.println("양수");
		}

	}

}
